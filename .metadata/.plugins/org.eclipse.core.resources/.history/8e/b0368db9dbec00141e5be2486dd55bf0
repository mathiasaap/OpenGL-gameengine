package textures;

import org.lwjgl.opengl.GL11;


public abstract class FBOTexture {

	protected int id;
	
	protected FBOTexture(int width, int height)
	{
	id = GL11.glGenTextures();
	GL11.glBindTexture(GL11.GL_TEXTURE_2D, id);
	//GL11.glTexImage2D(target, level, internalformat, width, height, border, format, type, pixels);
	GL11.glTexImage2D(GL11.GL_TEXTURE_2D, 0, getInternalFormat(), width, height, 0, getFormat(), GL11.GL_FLOAT,id);
	}
	
	protected abstract int getInternalFormat();
	protected abstract int getFormat();
	
}
